.page_steps
  background-color gc(beige1)
  > .title
    background-color gc(brown1)
    padding 10px
    height 20px
    animation inFromTop 0.2s linear 0.1s both
    > .copy
      white-space nowrap
      overflow hidden
      color gc(white1)
      width calc(100% - 30px)
      text-overflow ellipsis
      float left
      text-transform uppercase
      gf(c2)
    > .edit
      float right
      width 30px
      height 30px
      margin -5px 0 0 0
      animation scaleInF 0.2s linear 0.5s both
      > svg
        > path
          fill gc(white1)
  > .step
    width 100%
    height calc(33.33333333% - 13.3333px - 13px)
    position relative
    overflow hidden
    animation fadeIn 0.2s linear 0s both
    for i in 2..4
      &:nth-child({i})
        animation-delay unit((0.05*i) + 0.05, 's')
    > .inner
      width 100%
      height calc(100% - 0px)
      > .status
        float left
        width 50%
        height 100%
        position relative
        > .pending
          onoff()
          > .copys
            color gc(red1)
            text-align center
            position absolute
            width 100%
            top 50%
            margin-top -50px

            > .copy:first-child
              text-transform uppercase
              padding 0 0 7px 0
            > .copy:nth-child(3)
              padding 7px 0 0 0
            > .bubble
              background-color gc(red1)
              border-radius 50%
              color gc(white1)
              display inline-block
              line-height 54px
              width 54px
              height 54px
              > .num
                display inline-block
                gf(h1)
        > .complete
          onoff()
          height 90px
          position absolute
          left 0
          right 0
          top 50%
          margin-top -45px
          > .svg
            display block
            width 60px
            height 60px
            margin auto
            > svg
              > path
                fill gc(cyan1)
          > .copy
            display block
            margin 10px 0 0 0
            color gc(cyan1)
            text-align center
            text-transform uppercase
      > .image
        float right
        position relative
        width 50%
        height 100%
        background-color gc(beige1)
        background-size cover
        background-position 50% 50%
        > .copy
          text-align center
          text-transform uppercase
          color gc(gold1)
          position absolute
          top 50%
          left 0
          right 0
          onoff()
          margin-top -12px
          height 24px
          line-height 24px
          gf(c2)
        > .edit
          position absolute
          bottom 10px
          right 10px
          width 30px
          height 30px
          background-color rgba(gc(white1), 0.8)
          animation scaleInF 0.2s linear 0.5s both
          border-radius 50%
          > svg
            > path
              fill gc(brown1)
  > .cta_preview
    height 19px
    position absolute
    bottom 0
    left 0
    margin-left -0px
    right 0
    transition background-color 0.2s ease-in-out 0.4s, color 0.8s ease-in-out 0.3s
    animation inFromBottom 0.2s linear 0.5s both
    &.off
      background-color rgba(gc(brown1), 0.3)
    &.on
      background-color gc(brown1)

