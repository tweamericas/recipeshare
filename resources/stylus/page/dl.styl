.page.page_download
  > .copy
    text-align center
    padding 15px
    background-color gc(cyan1)
    color gc(beige1)
  > .image
    width 100%
    height 100%
    background-color gc(white1)
    text-align center
    > img
      width auto
      height 90%

  > .instagram
    background-color gc(white1)
    padding 10px
    text-align center
    width 230px
    margin auto
    onoff()
    > .copy
      height 20px
      width 190px
      float left
      line-height 25px
    > .cta
      width 25px
      height 25px
      float left
      > svg
        width inherit
        height inherit
        margin  0 0 0 10px
        > path, > circle
          fill gc(brown1)
